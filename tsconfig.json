{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "declaration": true,
        "stripInternal": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "declarationDir": "./types",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "types": [
            "node",
        ],
    },
    "include": [
        "src/**/*"
    ]
}